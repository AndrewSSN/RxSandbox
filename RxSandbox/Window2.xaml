<Window x:Class="RxSandbox.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RxSandbox="clr-namespace:RxSandbox"
    Title="Rx Sandbox" Width="714" Height="437">
   
        <Grid>      
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="6"/>              
				<ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <TreeView Grid.Column="0"  >
                <TreeViewItem x:Name="operatorsNode" Header="Operators" IsExpanded="True">
                    <!--<TreeViewItem x:Name="reativeNode" Header="Standard" IsExpanded="True" />
                    <TreeViewItem x:Name="extensionsNode" Header="Extensions" IsExpanded="True"/>-->
                </TreeViewItem>
            </TreeView>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        	<StackPanel Grid.Column="2" x:Name="stackPanel">
            	<TabControl x:Name="tabControl" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" />
        	</StackPanel>
    </Grid>
    
</Window>
